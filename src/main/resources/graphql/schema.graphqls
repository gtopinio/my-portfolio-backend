type Query {
    emails: [Email],
    emailById(id: ID!): Email
}

type Mutation {
    saveEmail(email: EmailInput): Email
    deleteEmail(id: ID!): DeleteEmailResponse
}

input EmailInput {
    senderEmail: String!
    senderName: String!
    message: String!
}

type Email {
    id: ID!
    senderEmail: String!
    senderName: String!
    message: String!
    date: String!
}

type DeleteEmailResponse {
    success: Boolean!
    message: String
}